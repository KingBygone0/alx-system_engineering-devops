#!/usr/bin/env bash 
# Installs and setup haproxy 

apt-get -y update 
apt-get install -y haproxy


sudo sh -c 'echo " 
frontend http 
    bind *:80 
    mode http 
    default_backend web-backend 

backend web-backend 
    balance roundrobin 
    server 257575-web-01 100.25.159.232:80 check 
    server 257575-web-02 100.26.255.91:80 check 
" >> /etc/haproxy/haproxy.cfg'

sudo service haproxy restart
